{{page-title "Cart"}}

<main class="container mt-5">
    <h1> Shopping Cart </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <LinkTo @route="index">Home</LinkTo>
        </li>
        <li class="breadcrumb-item">Shopping Cart</li>
    </ol>

    {{#each this.cart.itemList as |item|}}
    <div class="cart-item">
        <div class="cart-item-thumbnail">
            <img src={{item.image}} alt="Item in cart" />
        </div>
        <div>
            <h4>{{item.name}}</h4>
            <b>{{currency item.price}}</b>
        </div>
        <label> Amount:
            <input type="number" 
            value={{item.count}}
             {{on "input" (fn this.updateItemCount item)}}
             /></label>
        <div>

        </div>
    </div>
    {{/each}}
    <section class="total-amount-container">
        <div class="row">
            <span class="col">Subtotal</span>
            <span class="col">{{currency this.subtotal}}</span>
        </div>
        <div class="row">
            <span class="col">Tax</span>
            <span class="col">{{currency this.tax}}</span>
        </div>
        <div class="row">
            <span class="col">Total</span>
            <span class="col">{{currency this.total}}</span>
        </div>
    </section>

    <button type="button" class="submit-button"> Check Out</button>
</main>
{{outlet}}