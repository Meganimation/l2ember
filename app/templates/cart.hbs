{{page-title "Cart"}}

<main class="container mt-5">
    <h1> Shopping Cart</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <LinkTo @route="index">Home</LinkTo>
        </li>
        <li class="breadcrumb-item">Shopping Cart</li>
    </ol>
    <section class="total-amount-container">
        <div class="row">
            <span class="col">Subtotal</span>
            <span class="col">{{currency this.subtotal}}</span>
        </div>
        <div class="row">
            <span class="col">Tax</span>
            <span class="col">{{currency this.tax}}</span>
        </div>
        <div class="row">
            <span class="col">Total</span>
            <span class="col">{{currency this.total}}</span>
        </div>
    </section>

    <button type="button" class="submit-button"> Check Out</button>
</main>
{{outlet}}