{{!-- {{yield}} --}}
    <div class="product-details">
        {{!-- {{yield}} --}}
        {{!--Header--}}
        <section>
            <h3> {{@name}}</h3>
            <div class="text-warning">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half"></i>
            </div>
        </section>
        {{!--Price--}}
        <section class={{unless @isDetails 'h4'}}>
            <del class="originalprice"> {{currency @price.original}}</del>
            <i class="pricedown"> {{currency @price.current}} </i>
        </section>

        {{!--Colors--}}
        {{#if @isDetails}}
        <h5> Color </h5>
        <div class="product-colors active-{{@color}}">
            {{#each @colors as |colorInfo|}}
                <button type="button" class="product-color {{concat 'color-' colorInfo.color}}"
                {{on "click" (fn @onChangeColor colorInfo.color)}}>             
                </button>
            {{/each}}
        </div>
        {{/if}}

    </div>